<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/message_small_card"

    >

   <LinearLayout
       android:layout_margin="2dp"
       android:background="@drawable/green_gradient"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <ImageView
           android:layout_width="100dp"
           android:id="@+id/message_card_image"
           android:layout_height="70dp"
           android:layout_margin="10dp"
           app:srcCompat="@color/black">
       </ImageView>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"

           android:layout_marginVertical="10dp">
           <TextView
               android:textColor="@color/colorWhite"
               android:id="@+id/message_card_name"
               android:layout_weight="1"
               android:gravity=""
               android:textSize="13dp"
               android:layout_marginLeft="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Tobias Bressler">
               </TextView>           <TextView
           android:textColor="@color/colorWhite"
           android:layout_weight="4"
           android:id="@+id/message_card_topic"
           android:gravity=""
           android:textSize="17dp"
           android:layout_marginLeft="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="15 PS4 Games mit Inhalt blo">
       </TextView>


           <TextView
               android:id="@+id/message_card_lastMessage"
               android:textSize="13dp"
               android:textColor="@color/colorDarkWhite"
               android:layout_weight="1"
               android:gravity=""
               android:layout_marginLeft="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="10:00 - Was willst du von mir">
           </TextView>

                  </LinearLayout>
   </LinearLayout>

</androidx.cardview.widget.CardView>