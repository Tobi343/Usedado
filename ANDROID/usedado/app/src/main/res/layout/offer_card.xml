<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"




    android:layout_margin="10dp"
   >
    <LinearLayout
        android:background="@color/LightGrey"
        android:layout_width="match_parent"
        android:layout_height="150dp" android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp" android:orientation="horizontal">

            <ImageView
                android:id="@+id/offer_offer_image"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:background="@color/black"
                android:src="@drawable/background">
            </ImageView>

            <LinearLayout

                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="15dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/offer_offer_title"
                    android:layout_width="match_parent"
                    android:text="PS5 CONTROLLER"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:id="@+id/offer_offer_oriPrice"
                    android:layout_width="match_parent"
                    android:text="Original Price:  34€"
                    android:textSize="16dp"
                    android:textColor="@color/main_green"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:id="@+id/offer_offer_offerPrice"
                    android:layout_width="match_parent"
                    android:text="Offerd Price:     34€"
                    android:textSize="16dp"
                    android:textColor="@color/main_blue"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="50dp">
            <ImageView
                android:background="@color/main_green"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:src="@drawable/ic_baseline_check_24"
                android:padding="5dp"
                android:id="@+id/offer_card_accept_button"
                android:layout_height="match_parent">

            </ImageView>

            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_access_alarm_24"
                android:padding="5dp"
                android:id="@+id/offer_card_pending_button"
                android:background="@color/main_orange">
            </ImageView>
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:src="@drawable/ic_baseline_block_24"
                android:padding="5dp"
                android:id="@+id/offer_card_reject_button"
                android:layout_height="match_parent"
                android:background="@color/main_red">
            </ImageView>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>