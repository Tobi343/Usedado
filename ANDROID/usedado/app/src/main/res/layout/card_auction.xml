<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginHorizontal="30dp"
    android:layout_marginTop="15dp"
    app:cardCornerRadius="10dp"
    android:backgroundTint="@color/colorDarkWhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/auctionCardImage"
            android:background="@color/quantum_grey"
            android:src="@drawable/background"
            ></ImageView>
        <LinearLayout
            android:layout_width="140dp"
            android:layout_marginTop="-15dp"
            android:layout_gravity="right"
            android:layout_height="30dp">

            <TextView
                android:layout_width="100dp"
                android:text="08h 26m 03s"
                android:textSize="12dp"
                android:id="@+id/auctionDate"
                android:background="@drawable/left_round"
                android:textStyle="bold"
                android:textColor="@color/darkerBlue"
                android:gravity="center"
                android:layout_height="match_parent">

            </TextView>

            <TextView
                android:layout_width="40dp"
                android:text="â‚¬ 12"
                android:textSize="12dp"
                android:id="@+id/auctionPrice"
                android:background="@color/darkerBlue"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:layout_height="match_parent">

            </TextView>


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/auctionTitle"
            android:layout_marginHorizontal="20dp"
            android:text="New Bag really cool"
            android:textColor="@color/darkerBlue"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            ></TextView>

        <TextView
            android:layout_marginTop="10dp"
            android:lines="1"
            android:id="@+id/auctionDescribtion"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Bag really cool"
            android:textSize="18dp"
            android:layout_marginBottom="20dp"
            ></TextView>
    </LinearLayout>

</androidx.cardview.widget.CardView>