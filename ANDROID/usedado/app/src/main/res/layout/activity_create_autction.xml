<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightGrey"
    tools:context=".Java.activitys.Add_offer">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:text="Usedado"
            android:textSize="40dp"
            android:textStyle="bold"
            android:paddingTop="25dp"
            android:textColor="@color/colorWhite"
            android:layout_height="210dp"
            android:background="@drawable/green_gradient"
            android:gravity="center_horizontal">

        </TextView>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/white_round_bg"
        android:layout_marginHorizontal="20dp">
        <LinearLayout
            android:background="@drawable/white_round_bg"
            android:layout_width="match_parent"
            android:elevation="2dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auction Details"
                android:textColor="@color/black"
                android:textStyle="bold"

                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="20dp"
                android:textSize="20dp">
            </TextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="20dp"
                android:background="@android:color/darker_gray"/>
            <!-- Buttons -->

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/auctionName"
                android:background="@drawable/input_round"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:textSize="16dp"
                android:padding="12dp"
                android:textColor="@color/midGrey"
                android:textStyle="bold"
                android:layout_marginHorizontal="20dp"
                android:drawableRight="@drawable/ic_baseline_text_format_24"
                android:drawableTint="@color/midGrey"
                ></EditText>


            <ImageView
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:src="@drawable/addimage"
                android:layout_marginTop="40dp"
                android:padding="10dp"
                android:id="@+id/imageAuction"
                android:background="@color/quantum_grey"
                android:layout_height="200dp">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start and end date"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                ></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/dateSelection"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:gravity="bottom">


                <TextView
                    android:id="@+id/startDate"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="2021/03/04"
                    android:textSize="20dp"
                    android:paddingVertical="10dp"
                    android:textAlignment="center"
                    android:layout_marginRight="5dp"
                    android:background="@color/LightGrey"

                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"></TextView>
                <TextView
                    android:id="@+id/endDate"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="2021/03/04"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:paddingVertical="10dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/LightGrey"

                    android:layout_height="match_parent"></TextView>

            </LinearLayout>
              <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start and end time"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                ></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:gravity="bottom">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="2021/03/04"
                    android:textSize="20dp"
                    android:paddingVertical="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/LightGrey"
                    android:gravity="center"
                    android:id="@+id/startTime"
                    android:layout_height="match_parent"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="2021/03/04"
                    android:gravity="center"
                    android:id="@+id/endTime"
                    android:textSize="20dp"
                    android:paddingVertical="10dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/LightGrey"

                    android:layout_height="match_parent"></TextView>

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:background="@drawable/input_round"
                android:layout_height="wrap_content"
                android:hint="Minimum Price"
                android:textSize="16dp"
                android:padding="12dp"
                android:id="@+id/minimumPriceAuction"
                android:layout_marginTop="30dp"
                android:textColor="@color/midGrey"
                android:textStyle="bold"
                android:layout_marginHorizontal="20dp"
                android:drawableRight="@drawable/ic_baseline_euro_24"
                android:drawableTint="@color/midGrey"
                ></EditText>

            <EditText
                android:layout_width="match_parent"
                android:background="@drawable/input_round"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:textSize="16dp"
                android:padding="12dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/midGrey"
                android:textStyle="bold"
                android:id="@+id/descriptionAuction"
                android:layout_marginHorizontal="20dp"
                android:drawableRight="@drawable/ic_baseline_text_format_24"
                android:drawableTint="@color/midGrey"
                android:layout_marginBottom="60dp"
                ></EditText>




        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/auction_add_button_finish"
        android:layout_width="match_parent"
        android:text="Finish"
        android:textColor="@color/colorWhite"
        android:background="@drawable/button_gradient_lightround"
        android:layout_margin="20dp"
        android:textSize="17dp"
        android:layout_alignParentBottom="true"

        android:layout_height="40dp" />
</RelativeLayout>