<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/activity_horizontal_margin"
    android:layout_width="150dp"
    app:cardElevation="0dp"
    android:layout_marginRight="10dp"
    android:layout_height="200dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:layout_alignParentTop="true"
            android:requiresFadingEdge="vertical"

            android:id="@+id/dashboard_card_big_picture"
            android:background="@color/black"
            ></ImageView>
        <LinearLayout android:layout_width="match_parent" android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/white_round_bg"
            android:orientation="vertical"
            android:paddingLeft="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amazon Echo"
                android:textStyle="bold"
                android:textSize="16dp"
                android:maxLines="2" android:lines="2"
                android:paddingTop="8dp"
                android:id="@+id/dashboard_card_big_topic"

                ></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="von Tobias Bressler"
                    android:textSize="10dp"
                    android:gravity="bottom"
                    android:id="@+id/dashboard_card_big_name"

                    android:layout_marginBottom="5dp"
                    ></TextView>
                <TextView
                    android:text="30€"

                    android:textStyle="bold"
                    android:textColor="@color/main_font"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="right|bottom"
                    android:layout_marginRight="9dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/dashboard_card_big_price"

                    ></TextView>

            </LinearLayout>

            ></LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>

