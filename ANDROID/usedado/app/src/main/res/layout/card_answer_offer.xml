<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent" android:layout_margin="15dp" android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:drawableRight="@drawable/ic_baseline_delete_24"
            android:layout_marginRight="5dp"
            android:id="@+id/delete_answer"
            android:text="Vendor accepted your deal:"
            android:textSize="20dp"            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"

            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:text="Game Controller"
            android:id="@+id/card_answer_heading"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/main_blue"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:text="Payment address"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/card_answer_address"
            android:background="@color/LightGrey"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:text="tobi.bressler@gmail.com"
            android:padding="10dp"
            android:layout_height="wrap_content"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="15dp"
            android:id="@+id/card_answer_details"
            android:text="Method: payPal \n Price: 20â‚¬"
            android:layout_height="wrap_content"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:text="The deal is in now finished! The Team from Usedado has no impact on further actions! We hope you have had a good experience with your purchase and hope you could give us a good review! :)"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:layout_height="wrap_content">

        </TextView>

        <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>